/* pages/calendar/calendar.wxss */
.list{
  display: flex;
  background-color: #1cbbb4;
  margin-top: 20px;
  margin: 6px;
  border-radius: 7px;
  height: 60px;
  box-shadow: 0px 1px 5px #b4b4b4;
}
.time{
  font-size: small;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}
.time, .type{
  color: rgb(255, 255, 255);
}
.type{
  display: flex;
  align-items: center;
  justify-content:center;
  font-size: 20px;
  width: 40%;
}