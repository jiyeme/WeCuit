/* pages/grade/grade.wxss */

/* 新版 */
.total_card{
  background-color: hotpink;
  padding: 0.5rem;
  border-radius: 0.1rem;
  font-size: 40rpx;
}
.total_card_sub{
  display: flex;
  flex-wrap: wrap;
  margin: 0.6rem 0;
  font-size: 35rpx;
}
.total_item{
  width: 50%;
}
.total_text_right{
  text-align: right;
}
.grade_table{
  display:flex;
  flex-direction: column;
  box-shadow: 0px 1px 5px #b4b4b4;
}
.grade_table_item{
  display: inherit;
  flex-direction: column;
  background-color: #328ae4;
  margin: 0.2rem 0.4rem;
  border-radius: 10px;
}
.grade_table_item > view{
  margin-top: .5rem;
  padding-left: .5rem;
}
.grade_table_item > view:nth-child(1){
  border-bottom: solid 1px #7817b5;
  font-size: 40rpx;
}
.grade_table_item > view:nth-child(2){
  font-size: 35rpx;
}
.grade_table_item .detail{
  display: flex;
  flex-wrap: wrap;
  margin-bottom: .5rem;
}
.grade_table_item .detail > view{
  width: 50%;
}
@import 'grade-wxa-auto-dark.wxss'