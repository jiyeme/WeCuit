@import "/assets/wxss/iconfont.wxss";
/* 悬浮按钮 */
.floatBtn {
    position: fixed;
    right: 8%;
    z-index: 888;
    background: #ff9900;
    width: 50px;
    height: 50px;
    border-radius: 30px;
    box-shadow: 0px 0px 1rem #888888;
    opacity: 0.7;
    display: flex;
    justify-content: center;
    align-items: center;
}

@media (prefers-color-scheme: dark) {
    /* DarkMode 下的样式 start */
    .my-cell,
    page {
        background-color: #1b1b1b;
    }
    .footer {
        color: rgba(255, 255, 255, 0.8);
    }
    /* DarkMode 下的样式 end */
}

